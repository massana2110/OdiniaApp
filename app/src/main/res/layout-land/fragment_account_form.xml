<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/acc_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/n_margin"
            app:layout_constraintBottom_toTopOf="@+id/balance_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/account_type" />

        <Button
            android:id="@+id/btn_add"
            style="@android:style/Widget.Button"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/n_margin"
            android:layout_marginBottom="@dimen/small_padding"
            android:background="@drawable/buttons_style"
            android:fontFamily="@font/quicksand_medium"
            android:text="@string/btn_add"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/big_text_settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/balance_entry" />

        <TextView
            android:id="@+id/money_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/n_margin"
            android:text="@string/dollar_sign"
            android:textSize="@dimen/big_text"
            app:layout_constraintBottom_toBottomOf="@+id/balance_entry"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/balance_entry"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/balance_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/balance_entry_hint"
            android:inputType="numberDecimal"
            app:layout_constraintBottom_toTopOf="@+id/btn_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/money_sign"
            app:layout_constraintTop_toBottomOf="@+id/balance_txt" />

        <TextView
            android:id="@+id/balance_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/n_margin"
            android:fontFamily="@font/quicksand_medium"
            android:text="@string/txt_balance"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintBottom_toTopOf="@+id/balance_entry"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/acc_type" />

        <TextView
            android:id="@+id/account_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/n_margin"
            android:fontFamily="@font/quicksand_medium"
            android:text="@string/type_account"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintBottom_toTopOf="@+id/acc_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_entry_name_acc" />

        <TextView
            android:id="@+id/txt_name_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/n_margin"
            android:layout_marginTop="@dimen/small_padding"
            android:text="@string/name_acc"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintBottom_toTopOf="@+id/text_entry_name_acc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/text_entry_name_acc"
            android:layout_width="318dp"
            android:layout_height="49dp"
            android:layout_marginStart="@dimen/n_margin"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/hint_name_account"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/account_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_name_acc" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
